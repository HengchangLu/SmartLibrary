page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx;
  justify-content: flex-start;
}
.item {
  margin-top: 0rpx;
  text-align: center;
  font-size: 15px;
  width: 25%;
  display: inline-block;
}

.newsMenu {
  width: 90%;
  margin-top: 10rpx;
  justify-content: center;
  align-items: center;
  background: #f2f2f2;
  border-radius: 30rpx;
}

.default {
  width: 33%;
  font-size: 16px;
  text-align: center;
  height: 45px;
  line-height: 45px;
  display: inline-block;
}

.select {
  font-size: 16px;
  width: 33%;
  text-align: center;
  height: 45px;
  line-height: 45px;
  display: inline-block;
  color: #00c953;
  border-color: 5rpx solid #00c953;
}
scroll-view {
  display: block;
  width: 100%;
  height: calc(100% - 150px);
}

.news-item {
  border: 1px solid #00c953;
  width: 90%;
  margin: 0 auto;
  border-radius: 18rpx 18rpx 18rpx 18rpx;
  margin-top: 10px;
}

.newsTitle {
  font-size: 34rpx;
}

.newsTop {
  padding: 5px;
  height: 40px;
}

.newsBottom {
  background-color: #00c953;
  color: #fff;
  line-height: 20px;
  border-radius: 0rpx 0rpx 16rpx 16rpx;
}

.newsTime {
  text-align: right;
  margin-right: 20rpx;
  font-size: 30rpx;
}

.item {
  margin-top: 0rpx;
  text-align: center;
  font-size: 15px;
  width: 25%;
  display: inline-block;
  margin-bottom: 14rpx;
}
