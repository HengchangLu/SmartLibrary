.backView{
  position: relative;
  width: 750rpx;
  height: 800rpx;
  background: rebeccapurple;
}
.blackImage{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 11;
}
.head {
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  width: 80%;
  height: 680rpx;
  justify-content: space-between;
}
.place{
  background: #fff;
  width: 300rpx;
  height: 50rpx;
  margin-left:40rpx;
  margin-top:50rpx;
  border-radius: 10rpx;
  font-size: .8rem;
  text-align: left;    
  color:grey;
  overflow: hidden; 
} 
picker{
  display: flex;
  background: #fff;
  width: 500rpx;
  height: 70rpx;
  margin-left:80rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  /* margin:auto 0; */
  border-radius: 20rpx;
  justify-content: center;
  align-items: center; 
}
.picker text{
  font-size: 36rpx;
  /* text-align: center; */
  justify-content: center;
  align-items: center;
}
.date{
  font-size: .8rem!important;
  width: 200rpx!important;
}
.button{
  width: 500rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  border-radius: 100rpx;
  margin-bottom: 20rpx;
}
.button text{
  display: flex;
  justify-content: center;
  align-items: center;
}
