<navigator wx:for="{{viewList}}" wx:key="k">
      <view class="book">
        <view class="pic">
          <image src="{{item.book_img}}" mode="aspectFit" style="width:115px;height:120px;"></image>
        </view>
        <view class="book-info">
          <view class="name">
            <text>{{item.name}}</text>
          </view>
          <view class="desc">
            <text>{{item.desc}}</text>
          </view>
        </view>
      </view>
    </navigator>
<view class="button-area">
  <button class="button" type="primary" bindtap='toPic'><text>生成标准路线图</text></button>
  <button class="button" type="primary" bindtap='toPic'><text>生成卡通路线图</text></button>
</view>