.bottom-show text {
  font-size: 24rpx;
}

.newbooks {
  margin: 15px 5px 15px;
}

.header {
  position: relative;
  display: flex;
  flex-direction: row;
  margin: 0px 0px 5px;
}

.header button text {
  font-size: 20px;
  margin-left: -250px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bookImg {
  width: 100%;
  height: 130px;
  margin: 0 auto;
}

.content {
  display: flex;
  flex-direction: row;
  /* flex-wrap: wrap; */
}

.content-item {
  display: flex;
  flex-direction: column;
  width: 120px;
  height: 150px;
  margin: 5px 0px 5px;
}

.content-item image {
  height: 120px;
}

.title {
  height: 30px;
}

.title text {
  display: block;
  font-size: 18px;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
