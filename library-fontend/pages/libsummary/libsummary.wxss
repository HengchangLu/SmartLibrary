@import "../wxParse/wxParse.wxss";

.bg {
  width: 100%;
  height: 180rpx;
  background-color: #09f;
}

.content {
  display: flex;
  flex-direction: row;
}

.left {
  width: 25%;
  font-size: 26rpx;
  height: 100%;
  background: #f4f4f4;
}

.left view {
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.select {
  background-color: #fff;
  border-left: 10rpx solid #09f;
  color: #09f;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.normal {
  background-color: #f4f4f4;
  border-bottom: 2rpx solid #f2f2f2;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right {
  width: 100%;
  /* font-size:10rpx; */
  height: 100%;
}

.title {
  
  margin-top: 40rpx;
  text-align: center;
}

.title text {
  font-family: Microsoft Yahei;
  font-size: 40rpx;
  font-weight: normal;
}

.time {
  text-align: center;
}

.time text {
  font-family: Microsoft Yahei;
  font-size: 30rpx;
  font-weight: normal;
}
.bottomTitle {
  margin: 0rpx 50rpx 0rpx !important;
}

.bottomUrl {
  margin: 10rpx 50rpx 80rpx 50rpx !important;
}

.bottomTitle text {
  font-size: 30rpx;
}

.bottomUrl text {
  font-size: 26rpx;
}